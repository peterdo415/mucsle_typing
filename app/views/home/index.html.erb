<div class="min-h-screen hero" style="background-image: url(<%= asset_url('brandon.jpg') %>);">
  <div class="hero-overlay bg-opacity-60">
  <div class="w-full text-center hero-content max-w-none">
    <div class="w-full ">
      <div class="flex items-center justify-center w-screen h-screen gap-3">
        <%= link_to 'Play', muscle_packages_path(muscle_package_id: 0), class: 'font-sans text-4xl whitespace-normal btn btn-primary' %>
        <%= link_to '部位別でPlay', muscle_packages_path, class: 'font-sans text-4xl whitespace-normal btn btn-primary' %>
        <%= form_tag muscle_packages_path, method: :get do %>
          <%= select_tag :parts, options_for_select(MusclePackage.parts.map { |k, v| [k.capitalize, v] }) %>
          <%= submit_tag "Submit" %>
        <% end %>
        </form>
      </div>
    </div>
  </div>
  </div>
</div>
